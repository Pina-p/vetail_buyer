<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShopDetailPointHistory">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBlueLayout"
        android:background="@color/blueOne"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbShopHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="156dp">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_white_back" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_share_icon" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ivShopLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_ruby"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbShopHistory"/>
    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUBY Energy (Lashio)"
        android:textColor="@color/white"
        android:fontFamily="@font/interfont"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/ivShopLogo"
        app:layout_constraintLeft_toRightOf="@id/ivShopLogo"/>

    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/textbox_bg_round"
        android:text="095688689"
        android:textColor="@color/white"
        android:fontFamily="@font/interfont"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="@id/tvShopName"
        app:layout_constraintBottom_toBottomOf="@id/ivShopLogo"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cvMemLevPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivShopLogo">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tvMemLevPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="မိမိမန်ဘာလယ်ဗယ် နှင့် ပွိုင့်"
                android:fontFamily="@font/interfont"
                android:textColor="@color/grey_text"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivStar"/>
            <TextView
                android:id="@+id/tvMemLev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold Member"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black_text"
                android:fontFamily="@font/interfont"
                app:layout_constraintBottom_toTopOf="@id/tvMemPoint"
                app:layout_constraintLeft_toLeftOf="@id/tvMemLevPoint"
                app:layout_constraintTop_toBottomOf="@id/tvMemLevPoint"/>
            <TextView
                android:id="@+id/tvMemPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350,000"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/tvMemLevPoint"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Points"
                android:textSize="15sp"
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toBottomOf="@id/tvMemPoint"
                app:layout_constraintLeft_toRightOf="@id/tvMemPoint"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_black"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="လယ်ဗယ် နောက်တစ်ဆင့်တက်ရန် 50,000 Points သာလိုတော့သည်"
        android:textColor="@color/white"
        android:fontFamily="@font/interfont"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toRightOf="@id/cvMemLevPoint"
        app:layout_constraintLeft_toLeftOf="@id/cvMemLevPoint"
        app:layout_constraintTop_toBottomOf="@id/cvMemLevPoint"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/dark_grey"
        app:tabSelectedTextColor="@color/blueOne"
        app:tabIndicatorColor="@color/blueOne"
        app:tabIndicator="@drawable/custom_tab_indicator"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorFullWidth="false"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:layout_constraintTop_toBottomOf="@id/clBlueLayout"
        app:tabMode="scrollable">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F4F4F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        />
</androidx.constraintlayout.widget.ConstraintLayout>