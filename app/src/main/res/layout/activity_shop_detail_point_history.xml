<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShopDetailPointHistory">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBlueLayout"
        android:background="@color/blueOne"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbShopHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="156dp">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="24dp"
            android:clickable="true"
            android:layout_height="24dp"
            android:src="@drawable/ic_white_back" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_share_icon" />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/ivShopLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_ruby"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbShopHistory"/>
    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUBY Energy (Lashio)"
        android:textColor="@color/white"
        android:fontFamily="@font/interfont"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@id/ivShopLogo"
        app:layout_constraintLeft_toRightOf="@id/ivShopLogo"/>

    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/textbox_bg_round"
        android:text="095688689"
        android:textColor="@color/white"
        android:fontFamily="@font/interfont"
        android:textSize="14sp"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="@id/tvShopName"
        app:layout_constraintBottom_toBottomOf="@id/ivShopLogo"/>
        <ImageView
            android:id="@+id/ivMemLevPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/paledot_bg"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/ivShopLogo"/>
            <ImageView
                android:id="@+id/ivStar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/staraward"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toLeftOf="@id/ivMemLevPoint"
                app:layout_constraintTop_toTopOf="@id/ivMemLevPoint"
                app:layout_constraintBottom_toBottomOf="@id/ivMemLevPoint"/>

            <TextView
                android:id="@+id/tvMemLevPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="မိမိမန်ဘာလယ်ဗယ် နှင့် ပွိုင့်"
                android:fontFamily="@font/interfont"
                android:textSize="16sp"
                android:textColor="@color/grey_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toTopOf="@id/ivMemLevPoint"
                app:layout_constraintLeft_toRightOf="@id/ivStar"/>
            <TextView
                android:id="@+id/tvMemLev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold Member"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black_text"
                android:fontFamily="@font/interfont"
                app:layout_constraintBottom_toTopOf="@id/tvMemPoint"
                app:layout_constraintLeft_toLeftOf="@id/tvMemLevPoint"
                app:layout_constraintTop_toBottomOf="@id/tvMemLevPoint"/>
            <TextView
                android:id="@+id/tvMemPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350,000"
                android:textColor="@color/yellow"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="35dp"
                app:layout_constraintLeft_toLeftOf="@id/tvMemLevPoint"
                app:layout_constraintBottom_toBottomOf="@id/ivMemLevPoint"/>
            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Points"
                android:textSize="17sp"
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toBottomOf="@id/tvMemPoint"
                app:layout_constraintLeft_toRightOf="@id/tvMemPoint"/>
            <ImageButton
                android:id="@+id/ibForwardArrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_black"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintTop_toTopOf="@id/ivMemLevPoint"
                app:layout_constraintBottom_toBottomOf="@id/ivMemLevPoint"
                app:layout_constraintRight_toRightOf="@id/ivMemLevPoint"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="လယ်ဗယ် နောက်တစ်ဆင့်တက်ရန် 50,000 Points သာလိုတော့သည်"
            android:textColor="@color/white"
            android:fontFamily="@font/interfont"
            android:textSize="14sp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintRight_toRightOf="@id/ivMemLevPoint"
            app:layout_constraintLeft_toLeftOf="@id/ivMemLevPoint"
            app:layout_constraintTop_toBottomOf="@id/ivMemLevPoint"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
