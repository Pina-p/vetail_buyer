<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back_24"
            android:background="@color/white"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBackGroundLogin"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/tbLogin"
        app:cardCornerRadius="25dp">
    <ImageView
        android:id="@+id/ivBackgroundLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tbLogin"
        android:background="@drawable/login_bg"
        android:scaleType="center"/>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/viewCenter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/cvBackGroundLogin"
        app:layout_constraintBottom_toBottomOf="@id/cvBackGroundLogin"
        app:layout_constraintRight_toRightOf="@id/cvBackGroundLogin"
        app:layout_constraintLeft_toLeftOf="@id/cvBackGroundLogin"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/viewCenter"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@drawable/custom_login"
    android:elevation="2dp"
    >
    <TextView
        android:id="@+id/tvTobLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_to_my_account"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_ph_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_phone_outline_icon"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/tvTobLabel"
        app:boxStrokeColor="@color/blueOne"
        app:hintTextColor="@color/blueOne"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ph_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_phone_email"
            android:textColorHint="@color/iconTextColor"
            android:maxLength="11"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_phone_outline_icon"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/til_ph_no"
        app:boxStrokeColor="@color/blueOne"
        app:hintTextColor="@color/blueOne"
        app:passwordToggleEnabled="true"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textColorHint="@color/iconTextColor"
            android:maxLength="11"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvForgotPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        app:layout_constraintTop_toBottomOf="@+id/til_pw"
        app:layout_constraintRight_toRightOf="@+id/til_pw"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        android:textSize="16sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_pw"
        android:layout_marginTop="55dp"
        android:text="@string/login"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/custom_button_blue"/>

    <TextView
        android:id="@+id/tvOrLoginWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        android:text="@string/or_login_with"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/tvOrLoginWith"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrLoginWith"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvOrLoginWith"
        android:background="@color/whitishWhite"
        android:layout_marginHorizontal="10dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/tvOrLoginWith"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrLoginWith"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvOrLoginWith"
        android:background="@color/whitishWhite"
        android:layout_marginHorizontal="10dp"
        />

    <LinearLayout
        android:id="@+id/llOtherLgoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvOrLoginWith"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/ivApple"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_apple_login"
            android:layout_marginHorizontal="5dp"/>
        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_facebook"
            android:layout_marginHorizontal="5dp"/>
        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_google"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>