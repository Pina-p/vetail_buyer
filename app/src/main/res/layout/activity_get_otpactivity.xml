<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GetOTPActivity">
    <ImageView
        android:id="@+id/ivTopIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_mail_beautiful_24"
        />
    <TextView
        android:id="@+id/tvTopLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="45dp"
        android:text="တစ်ခါသုံးကုဒ် ထည့်ပါ"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTopIcon" />

    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTopLabel"
        app:layout_constraintLeft_toLeftOf="@+id/tvTopLabel"
        app:layout_constraintRight_toRightOf="@+id/tvTopLabel"
        android:gravity="left"
        android:text="သင်ထဲ့ထားသောအီးမေးလ် swam*******@gmail.com သို့ တစ်ခါသုံးကုဒ်ပေးပို့ပြီးဖြစ်ပါသည်၊။ ၎င်းတစ်ခါသုံးကုဒ်ကို အောက်တွင် ရိုက်ထဲ့ပါ"
        />

    <LinearLayout
        android:id="@+id/llOtpLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNotice"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:background="@color/black"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp">
            <TextView
                android:id="@+id/tvOtpOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*"
                android:maxLength="1"
                android:textSize="45sp"
                android:gravity="center"
                android:nextFocusRight="@id/tvOtpTwo"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:background="@color/black"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            >
            <TextView
                android:id="@+id/tvOtpTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*"
                android:maxLength="1"
                android:textSize="45sp"
                android:gravity="center"
                android:nextFocusRight="@id/tvOtpThree"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:background="@color/black"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp">
            <TextView
                android:id="@+id/tvOtpThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*"
                android:maxLength="1"
                android:textSize="45sp"
                android:gravity="center"
                android:nextFocusRight="@id/tvOtpFour"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:background="@color/black"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp">
            <TextView
                android:id="@+id/tvOtpFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*"
                android:maxLength="1"
                android:textSize="45sp"
                android:gravity="center"
                android:nextFocusRight="@id/tvOtpFive"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:background="@color/black"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp">
            <TextView
                android:id="@+id/tvOtpFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*"
                android:maxLength="1"
                android:textSize="45sp"
                android:gravity="center"
                android:nextFocusRight="@id/tvOtpSix"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="55dp"
            app:cardCornerRadius="10dp"
            android:background="@color/black"
            android:elevation="2dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp">
            <TextView
                android:id="@+id/tvOtpSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="*"
                android:maxLength="1"
                android:textSize="45sp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/llOtpLayout"
        app:layout_constraintLeft_toLeftOf="@id/llOtpLayout"
        android:layout_marginTop="20dp"
        android:text="5:00"
        android:textSize="22sp"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvRequestCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ကုဒ်ထပ်မံတောင်းဆိုရန်"
        android:textColor="@color/blueOne"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/llOtpLayout"
        app:layout_constraintTop_toBottomOf="@id/llOtpLayout"/>

    <ImageView
        android:id="@+id/ivSend"
        android:visibility="gone"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/send"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toRightOf="@id/tvRequestCode"
        app:layout_constraintTop_toBottomOf="@id/llOtpLayout"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvAtLeast6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="တစ်ခါသုံးကုဒ်မှာ အနည်းဆုံး ၆ လုံးရှိရမည်"
        android:textColor="@color/red"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/llOtpLayout"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        app:layout_constraintLeft_toLeftOf="@+id/llOtpLayout"
        app:layout_constraintRight_toRightOf="@id/llOtpLayout"
        android:layout_marginTop="35dp"
        android:text="ဆက်သွားမည်"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_blue"/>
</androidx.constraintlayout.widget.ConstraintLayout>