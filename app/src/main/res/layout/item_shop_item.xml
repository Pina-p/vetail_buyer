<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#F4F4F4"
        android:layout_marginVertical="2dp"
        app:cardElevation="0dp"
        android:paddingVertical="10dp"
        >
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/ivItemImage"
           android:layout_width="125dp"
           android:layout_height="125dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_margin="8dp"
           android:src="@drawable/temp_item_nike_shoes"
           android:scaleType="fitCenter"
           android:background="@drawable/custom_imageview_shopitem"
           />
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="@id/ivItemImage"
           app:layout_constraintLeft_toLeftOf="@id/ivItemImage"
           app:layout_constraintRight_toRightOf="@id/ivItemImage"
           android:orientation="horizontal"
           android:gravity="center_vertical|left"
           android:layout_marginTop="8dp">
           <ImageView
               android:id="@+id/ivHotIcon"
               android:layout_width="17dp"
               android:layout_height="17dp"
               android:src="@drawable/ic_hot_icon"
               android:layout_marginLeft="5dp"
               android:layout_gravity="center_vertical"
               android:visibility="visible"/>


           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:backgroundTint="@color/blackish_grey"
               app:cardCornerRadius="10dp"
               android:layout_marginLeft="10dp"
               android:layout_gravity="center_vertical"
               >

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:paddingHorizontal="5dp"
                   android:text="till 14 Aug 22"
                   android:textColor="@color/white"
                   android:textSize="12sp" />
           </androidx.cardview.widget.CardView>
       </LinearLayout>

       <TextView
           android:id="@+id/tvItemName"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="@+id/ivItemImage"
           app:layout_constraintRight_toRightOf="@id/ivItemImage"
           app:layout_constraintTop_toBottomOf="@id/ivItemImage"
           android:layout_marginTop="5dp"
           android:text="Nike Air 270 new 2022"
           android:textSize="14sp"
           android:textColor="@color/black"
           />
       <TextView
           android:id="@+id/tvItemPts"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           app:layout_constraintLeft_toLeftOf="@+id/ivItemImage"
           app:layout_constraintRight_toRightOf="@id/ivItemImage"
           app:layout_constraintTop_toBottomOf="@id/tvItemName"
           android:layout_marginTop="5dp"
           android:text="350,000 Pts"
           android:textSize="16sp"
           android:textStyle="bold"
           android:textColor="@color/yellow"
           />
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnCheck"
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:stateListAnimator="@null"
    app:layout_constraintLeft_toLeftOf="@+id/ivItemImage"
    app:layout_constraintRight_toRightOf="@id/ivItemImage"
    app:layout_constraintTop_toBottomOf="@id/ivItemImage"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/custom_mini_button_blue"
    android:text="ကြည့်ရန်"
    android:textColor="@color/white"
    android:layout_marginTop="85dp"
    android:textSize="13dp"
    />

   </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>