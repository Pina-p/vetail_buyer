<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpFinishActiviy">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbSignUpFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/ivBackButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back_24"
        android:background="@color/white"
        />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/llSignUpFinish"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tbSignUpFinish"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp">
        <ImageView
            android:id="@+id/ivVetailIcon"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_vetail_blue"/>
        <TextView
            android:id="@+id/tvWelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ကြိုဆိုပါတယ်"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/tvWelcomeTextMini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:text="သင့်ရဲ့စတိုးဆိုင်ကို ပိုမိုကောင်းမွန်တဲ့ \nအွန်လိုင်းစတိုးဆိုင် အဖြစ် အလွယ်ကူပြေင်းလဲနိုင်ဖို့အတွက် Vetail မှကူညီရန်အသင့်ရှိပါတယ်"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:startIconTint="@color/black"
            app:startIconDrawable="@drawable/ic_boy_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blueOne"
            app:hintTextColor="@color/blueOne"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*အမည်"
                android:textColorHint="@color/iconTextColor"
                android:inputType="textPersonName"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:startIconTint="@color/black"
            app:startIconDrawable="@drawable/ic_mail_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blueOne"
            app:hintTextColor="@color/blueOne"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="အီးမေးလ်"
                android:textColorHint="@color/iconTextColor"
                android:inputType="textEmailAddress"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:startIconTint="@color/black"
            app:startIconDrawable="@drawable/ic_lock_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blueOne"
            app:hintTextColor="@color/blueOne"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*စကားဝှက်"
                android:textColorHint="@color/iconTextColor"
                android:inputType="textPassword"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_pw_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:startIconTint="@color/black"
            app:startIconDrawable="@drawable/ic_lock_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blueOne"
            app:hintTextColor="@color/blueOne"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_pw_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="*စကားဝှက်"
                android:textColorHint="@color/iconTextColor"
                android:inputType="textPassword"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                />
        </com.google.android.material.textfield.TextInputLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/ivPwCheckSixDigit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_union"/>
            <TextView
                android:id="@+id/tvPwCheckSixDigit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="စကားဝှက်မှာ အနည်းဆုံး ၆ လုံးရှိရမည်။"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/ivPwCheckOneAlpha"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_union"/>
            <TextView
                android:id="@+id/tvPwCheckOneAlpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="စကားဝှက်မှာ အနည်းဆုံး အင်္ဂလိပ်အက္ခရာ ၁ လုံးပါရမည်။"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/ivPwCheckOneNum"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_union"/>
            <TextView
                android:id="@+id/tvPwCheckOneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="စကားဝှက်မှာ အနည်းဆုံး ဂဏန်းနံပါတ် ၁ လုံးပါရမည်။"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signUp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:stateListAnimator="@null"
                android:background="@drawable/custom_button_invisibile_blue"
                />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>