<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivShopImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:src="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="RUBY Energy (Lashio)"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:maxLength="30"
        app:layout_constraintTop_toTopOf="@id/ivShopImg"
        app:layout_constraintBottom_toBottomOf="@id/ivShopImg"
        app:layout_constraintLeft_toRightOf="@id/ivShopImg"/>

    <TextView
        android:id="@+id/tvPointNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350,000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/yellow"
        android:layout_marginEnd="5dp"
        app:layout_constraintRight_toLeftOf="@id/tvPts"
        app:layout_constraintTop_toTopOf="@id/ivShopImg"
        app:layout_constraintBottom_toBottomOf="@id/ivShopImg"/>

    <TextView
        android:id="@+id/tvPts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Pts"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@id/ivArrow"
        app:layout_constraintTop_toTopOf="@id/ivShopImg"
        app:layout_constraintBottom_toBottomOf="@id/ivShopImg"/>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_point_forward"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivShopImg"
        app:layout_constraintBottom_toBottomOf="@id/ivShopImg"/>

    <View
        android:id="@+id/vView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivShopImg"/>
</androidx.constraintlayout.widget.ConstraintLayout>