    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivShopImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruby Energy (Lashio)"
                android:textColor="@color/blueFont"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ivShopImg"/>

            <TextView
                android:id="@+id/tvReceivedFromSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller ထံမှရရှိသည်"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toRightOf="@id/ivShopImg"
                app:layout_constraintTop_toBottomOf="@id/tvShopName"/>

            <TextView
                android:id="@+id/tvHashTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#090909"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toRightOf="@id/ivShopImg"
                app:layout_constraintTop_toBottomOf="@id/tvReceivedFromSeller"/>
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toRightOf="@id/ivShopImg"
                app:layout_constraintTop_toBottomOf="@id/tvHashTag"/>
            <TextView
                android:id="@+id/tvNoteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sampletext"
                android:layout_marginStart="10dp"
                app:layout_constraintLeft_toRightOf="@id/ivShopImg"
                app:layout_constraintTop_toBottomOf="@id/tvNote"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Sep 22 04:00 PM"
                android:textSize="14sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvShopName"
                app:layout_constraintTop_toTopOf="@id/tvShopName"/>
            
            <TextView
                android:id="@+id/tvPointNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1,000"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvHashTag"
                app:layout_constraintTop_toTopOf="@id/tvHashTag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pts"
                android:textSize="16sp"
                android:textColor="@color/yellow"
                android:layout_marginStart="5dp"
                app:layout_constraintLeft_toRightOf="@id/tvPointNum"
                app:layout_constraintBottom_toBottomOf="@id/tvPointNum"
                app:layout_constraintTop_toTopOf="@id/tvPointNum"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
