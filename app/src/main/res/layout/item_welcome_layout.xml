<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="60dp">


<ImageView
    android:id="@+id/ivLayoutIcon"
    android:src="@drawable/ic_bg_people_discussing"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="100dp"
    android:layout_marginHorizontal="40dp"
    android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/tvFirstCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivLayoutIcon"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:text="@string/welcome_first_caption"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/ivLayoutIcon" />
    <TextView
        android:id="@+id/tvSecondCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstCaption"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/welcome_first_little_caption"
        android:gravity="left"
        android:layout_marginHorizontal="40dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>