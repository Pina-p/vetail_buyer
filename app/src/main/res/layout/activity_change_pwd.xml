<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePwdActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbSignUpFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/ivBackButton"
            android:clickable="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/arrow_back"
            android:background="@color/white"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvChangePwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="စကားဝှက် ပြောင်းလဲမည်"
        android:fontFamily="@font/pyidaungsu"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbSignUpFinish"/>

    <TextView
        android:id="@+id/tvSuggest"
        android:layout_width="0dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:fontFamily="@font/pyidaungsu"
        android:textSize="14sp"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="သင့် စကားဝှက်အသစ်ကို မှတ်မိလွယ်ပြီး အလွယ်တကူ\nမခိုးယူနိုင်သော စကားဝှက်မျိုးထားရှိရန် အကြုံပြုအပ်ပါသည်။"
        app:layout_constraintLeft_toLeftOf="@id/tvChangePwd"
        app:layout_constraintTop_toBottomOf="@id/tvChangePwd"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilOldPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_lock_24"
        android:layout_marginHorizontal="20dp"
        style="@style/LoginTextInputLayoutStyle"
        app:layout_constraintTop_toBottomOf="@id/tvSuggest"
        app:hintTextColor="@color/blueOne"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etOldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="စကားဝှက်အဟောင်း"
            android:textColorHint="@color/iconTextColor"
            android:maxLength="11"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNewPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_lock_24"
        android:layout_marginHorizontal="20dp"
        style="@style/LoginTextInputLayoutStyle"
        app:layout_constraintTop_toBottomOf="@id/tilOldPwd"
        app:hintTextColor="@color/blueOne"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNewPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="စကားဝှက်အသစ် ထည့်ပါ"
            android:textColorHint="@color/iconTextColor"
            android:maxLength="11"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_pw_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:startIconTint="@color/black"
        app:startIconDrawable="@drawable/ic_lock_24"
        android:layout_marginHorizontal="20dp"
        style="@style/LoginTextInputLayoutStyle"
        app:layout_constraintTop_toBottomOf="@id/tilNewPwd"
        app:hintTextColor="@color/blueOne"
        app:passwordToggleEnabled="true"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pw_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="စကားဝှက်အသစ် ထပ်မံထည့်ပါ"
            android:textColorHint="@color/iconTextColor"
            android:maxLength="11"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/ivCross1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toBottomOf="@id/til_pw_confirm"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/ivGreenCheck1"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/green_check"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_pw_confirm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="စကားဝှက်မှာ အနည်းဆုံး ၆ လုံးရှိရမည်။"
        android:fontFamily="@font/pyidaungsu"
        android:textColor="#929292"
        app:layout_constraintLeft_toRightOf="@id/ivCross1"
        app:layout_constraintTop_toTopOf="@id/ivCross1"
        app:layout_constraintBottom_toBottomOf="@id/ivCross1"/>

    <ImageView
        android:id="@+id/ivCross2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toBottomOf="@id/ivCross1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/ivGreenCheck2"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/green_check"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCross1"/>
    <TextView
        android:id="@+id/tvPwdConstraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="2dp"
        android:textColor="#929292"
        android:fontFamily="@font/pyidaungsu"
        android:text="စကားဝှက်မှာ အနည်းဆုံး အင်္ဂလိပ်အက္ခရာ ၁ လုံးပါရမည်။"
        app:layout_constraintLeft_toRightOf="@id/ivCross2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivCross2"
        />

    <ImageView
        android:id="@+id/ivCross3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toBottomOf="@id/tvPwdConstraint"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/ivGreenCheck3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/green_check"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCross2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pyidaungsu"
        android:textColor="#929292"
        android:text="စကားဝှက်မှာ အနည်းဆုံး ဂဏန်း ၁ လုံးပါရမည်။"
        app:layout_constraintLeft_toRightOf="@id/ivCross3"
        app:layout_constraintTop_toTopOf="@id/ivCross3"
        app:layout_constraintBottom_toBottomOf="@id/ivCross3"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:stateListAnimator="@null"
        app:cornerRadius="10dp"
        android:text="သိမ်းဆည်းမည်"
        android:fontFamily="@font/pyidaungsu"
        android:backgroundTint="#EAF0FF"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivCross3"/>
</androidx.constraintlayout.widget.ConstraintLayout>